@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using Giydir.Core.Interfaces
@inject NavigationManager Navigation
@inject IAuthService AuthService

<div class="bg-background-light dark:bg-background-dark text-slate-800 dark:text-slate-200 h-screen flex overflow-hidden font-display dark">
    <!-- Sidebar -->
    <aside class="w-64 flex-shrink-0 bg-white dark:bg-panel-dark border-r border-slate-200 dark:border-white/5 flex flex-col z-50">
        <div class="p-6 flex items-center gap-3 cursor-pointer" @onclick='() => Navigation.NavigateTo("/admin/dashboard")'>
            <div class="w-10 h-10 bg-primary rounded flex items-center justify-center">
                <span class="material-icons text-white">dataset</span>
            </div>
            <div>
                <h1 class="font-extrabold text-lg tracking-tight">NanoBanana</h1>
                <p class="text-[10px] uppercase tracking-widest text-primary font-bold">Admin Portal</p>
            </div>
        </div>
        <nav class="flex-1 px-4 mt-4 space-y-1">
            <NavLink href="/admin/dashboard" class="flex items-center gap-3 px-4 py-3 rounded text-slate-500 dark:text-slate-400 hover:bg-primary/10 hover:text-primary transition-all font-medium" ActiveClass="bg-primary text-white">
                <span class="material-icons text-sm">dashboard</span>
                <span>Analytics</span>
            </NavLink>
            <NavLink href="/admin/lab" class="flex items-center gap-3 px-4 py-3 rounded text-slate-500 dark:text-slate-400 hover:bg-primary/10 hover:text-primary transition-all" ActiveClass="bg-primary text-white">
                <span class="material-icons text-sm">movie_filter</span>
                <span>Creation Lab</span>
            </NavLink>
            <NavLink href="/admin/library" class="flex items-center gap-3 px-4 py-3 rounded text-slate-500 dark:text-slate-400 hover:bg-primary/10 hover:text-primary transition-all" ActiveClass="bg-primary text-white">
                <span class="material-icons text-sm">inventory_2</span>
                <span>Prompt Library</span>
            </NavLink>
            <a class="flex items-center gap-3 px-4 py-3 rounded text-slate-500 dark:text-slate-400 hover:bg-primary/10 hover:text-primary transition-all" href="#">
                <span class="material-icons text-sm">people_outline</span>
                <span>User Directory</span>
            </a>
            <NavLink href="/admin/pose-management" class="flex items-center gap-3 px-4 py-3 rounded text-slate-500 dark:text-slate-400 hover:bg-primary/10 hover:text-primary transition-all" ActiveClass="bg-primary text-white">
                <span class="material-icons text-sm">accessibility_new</span>
                <span>Pozlar</span>
            </NavLink>
        </nav>
        <div class="p-4 border-t border-slate-200 dark:border-white/5">
            <NavLink href="/admin/settings" class="flex items-center gap-3 px-4 py-3 rounded text-slate-500 dark:text-slate-400 hover:bg-primary/10 hover:text-primary transition-all font-medium" ActiveClass="bg-primary text-white">
                <span class="material-icons text-sm">settings</span>
                <span>Settings</span>
            </NavLink>
            <div class="mt-4 p-4 rounded bg-primary/5 border border-primary/20">
                <p class="text-xs text-slate-400">System Status</p>
                <div class="flex items-center gap-2 mt-1">
                    <div class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></div>
                    <span class="text-xs font-semibold text-emerald-500 uppercase tracking-tighter">AI Core Online</span>
                </div>
            </div>
        </div>
    </aside>

    <!-- Main Content Area -->
    <main class="flex-1 flex flex-col overflow-hidden bg-background-light dark:bg-background-dark relative">
        <!-- Decorative background glow -->
        <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-primary/5 rounded-full blur-[120px] pointer-events-none"></div>

        <!-- Top Header -->
        <header class="sticky top-0 z-10 flex items-center justify-between px-8 py-4 bg-background-light/80 dark:bg-background-dark/80 backdrop-blur-md border-b border-slate-200 dark:border-white/5">
            <div class="flex items-center flex-1 max-w-xl">
                <div class="relative w-full group">
                    <span class="material-icons absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 text-sm">search</span>
                    <input class="w-full pl-10 pr-4 py-2 bg-slate-100 dark:bg-panel-dark border-transparent focus:border-primary focus:ring-0 rounded text-sm transition-all" placeholder="Search analytics, models, or assets..." type="text"/>
                </div>
            </div>
            <div class="flex items-center gap-6">
                <button class="relative text-slate-400 hover:text-primary transition-colors">
                    <span class="material-icons">notifications</span>
                    <span class="absolute -top-1 -right-1 w-2 h-2 bg-primary rounded-full border-2 border-background-dark"></span>
                </button>
                <div class="h-8 w-[1px] bg-slate-200 dark:bg-white/10"></div>
                <div class="flex items-center gap-3">
                    <div class="text-right">
                        <p class="text-xs font-bold">@userName</p>
                        <p class="text-[10px] text-slate-500">Super Admin</p>
                    </div>
                    <div class="w-10 h-10 rounded-lg bg-primary/20 border border-primary/40 flex items-center justify-center overflow-hidden">
                        <span class="material-icons text-primary text-xl">person</span>
                    </div>
                </div>
                <button class="text-slate-400 hover:text-red-500 transition-colors" title="Logout" @onclick="HandleLogout">
                    <span class="material-icons">logout</span>
                </button>
            </div>
        </header>

        <!-- Body Content -->
        <div class="flex-1 overflow-y-auto min-h-0">
            @Body
        </div>

        <!-- Footer Meta -->
        <footer class="p-4 border-t border-slate-200 dark:border-white/5 flex items-center justify-between text-[10px] font-bold text-slate-500 uppercase tracking-widest bg-white/5 backdrop-blur-sm">
            <div>Â© 2024 NanoBanana AI Studio. All systems operational.</div>
            <div class="flex gap-4">
                <a class="hover:text-primary no-underline" href="#">API Docs</a>
                <a class="hover:text-primary no-underline" href="#">System Logs</a>
                <a class="hover:text-primary no-underline" href="#">Server Health</a>
            </div>
        </footer>
    </main>
</div>

@code {
    private string userName = "Admin";

    protected override async Task OnInitializedAsync()
    {
        var user = await AuthService.GetCurrentUserAsync();
        if (user != null)
        {
            userName = user.Name ?? user.Email;
        }
    }

    private void HandleLogout()
    {
        Navigation.NavigateTo("/logout");
    }
}
