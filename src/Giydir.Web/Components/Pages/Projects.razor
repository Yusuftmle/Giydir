@page "/projects"
@using Giydir.Core.Entities
@using Giydir.Core.Interfaces
@inject IProjectRepository ProjectRepository
@inject IJwtTokenService JwtService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@rendermode InteractiveServer

<div class="min-h-screen bg-background-dark pt-8 pb-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Page Header -->
        <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-10">
            <div>
                <span class="text-[10px] font-bold tracking-[0.2em] uppercase text-slate-500 mb-2 block">Galeri</span>
                <h1 class="text-4xl font-display font-semibold text-white mb-2 tracking-tight">Projelerim</h1>
                <p class="text-slate-400 font-light">AI sanal deneme çalışmalarınızı yönetin ve düzenleyin.</p>
            </div>
            <div>
                <a href="/editor" class="group relative inline-flex items-center justify-center gap-2 px-6 py-3 bg-primary hover:brightness-110 text-background-dark font-bold rounded-xl shadow-lg shadow-primary/20 transition-all active:scale-95 whitespace-nowrap no-underline">
                    <span class="material-icons text-lg">add_circle</span>
                    <span class="text-sm tracking-widest">YENİ PROJE</span>
                </a>
            </div>
        </div>

        @if (isLoading)
        {
            <div class="flex items-center justify-center py-32">
                <div class="relative w-16 h-16">
                    <div class="absolute inset-0 border-4 border-white/10 rounded-full"></div>
                    <div class="absolute inset-0 border-4 border-primary rounded-full border-t-transparent animate-spin"></div>
                </div>
            </div>
        }
        else if (!projects.Any())
        {
            <div class="text-center py-32 bg-white/5 rounded-2xl border border-white/5">
                <div class="w-20 h-20 mx-auto mb-6 bg-white/5 rounded-full flex items-center justify-center">
                    <span class="material-icons text-4xl text-primary">photo_library</span>
                </div>
                <h3 class="text-2xl font-display font-semibold text-white mb-2">Henüz Proje Yok</h3>
                <p class="text-slate-400 mb-8 max-w-md mx-auto">İlk AI sanal deneme görselinizi oluşturmak için editöre başlayın.</p>
                <a href="/editor" class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-background-dark rounded-xl font-bold tracking-widest text-sm transition-all shadow-lg shadow-primary/20 no-underline hover:brightness-110">
                    <span class="material-icons">add_circle</span>
                    EDITÖRE GİT
                </a>
            </div>
        }
        else
        {
            <!-- Project Cards Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                @foreach (var project in projects)
                {
                    <div @onclick="() => OpenProject(project.Id)" class="group relative bg-white/5 rounded-xl overflow-hidden border border-white/10 hover:border-primary/50 transition-all duration-500 shadow-xl hover:shadow-2xl hover:shadow-primary/10 cursor-pointer">
                        <!-- Image Thumbnail -->
                        <div class="relative overflow-hidden aspect-[3/4] bg-gradient-to-br from-slate-800 to-slate-900 flex items-center justify-center">
                            @{
                                var thumbnail = project.Images?.FirstOrDefault(i => i.Status == "Completed" && !string.IsNullOrEmpty(i.GeneratedImagePath));
                            }
                            
                            @if (thumbnail != null)
                            {
                                <img src="@thumbnail.GeneratedImagePath" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" alt="@project.Name" loading="lazy" />
                            }
                            else
                            {
                                <div class="absolute inset-0 bg-gradient-to-br from-primary/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                                <span class="material-icons text-6xl text-slate-700 group-hover:text-primary transition-colors duration-500">auto_awesome</span>
                            }
                            
                            <!-- Hover Actions Overlay -->
                            <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 flex flex-col justify-end p-4">
                                <div class="flex gap-2 justify-center mb-2 translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                                    <span class="p-2.5 rounded-full bg-primary text-background-dark shadow-lg">
                                        <span class="material-icons text-lg">visibility</span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Content Body -->
                        <div class="p-4 bg-white/[0.02]">
                            <div class="flex justify-between items-start mb-3">
                                <div class="flex-1 min-w-0">
                                    <h3 class="font-display font-semibold text-white leading-tight m-0 truncate">@project.Name</h3>
                                    <p class="text-[10px] text-slate-400 mt-1.5 m-0 uppercase tracking-wider font-medium">@(project.Images?.Count(i => i.Status == "Completed") ?? 0) Görsel</p>
                                </div>
                            </div>
                            <div class="flex items-center justify-between pt-3 border-t border-white/5">
                                <span class="text-[10px] text-slate-500 uppercase tracking-widest font-medium">@project.CreatedAt.ToString("dd MMM yyyy")</span>
                                <span class="material-icons text-slate-600 text-sm group-hover:text-primary transition-colors">chevron_right</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private List<Project> projects = new();
    private bool isLoading = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var token = await JS.InvokeAsync<string>("tokenStorage.getToken");
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }
            var principal = JwtService.ValidateToken(token);
            var userIdStr = principal?.FindFirst("sub")?.Value;
            if (!int.TryParse(userIdStr, out var userId))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            projects = await ProjectRepository.GetByUserIdAsync(userId);
            isLoading = false;
            StateHasChanged();
        }
    }

    private void OpenProject(int projectId)
    {
        Navigation.NavigateTo($"/projects/{projectId}");
    }
}
