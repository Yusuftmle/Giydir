@page "/projects"
@using Giydir.Core.DTOs
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<div class="min-h-screen bg-slate-950 pt-8 pb-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Page Header -->
        <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-10">
            <div>
                <span class="text-[10px] font-bold tracking-[0.2em] uppercase text-slate-500 mb-2 block">Galeri</span>
                <h1 class="text-4xl font-display font-semibold text-[#f1f5f9] mb-2 tracking-tight">Projelerim</h1>
                <p class="text-slate-400 font-light">AI sanal deneme çalışmalarınızı yönetin ve düzenleyin.</p>
            </div>
            <div class="flex flex-col sm:flex-row gap-3 w-full md:w-auto">
                <!-- Create New Button -->
                <a href="/editor" class="group relative inline-flex items-center justify-center gap-2 px-6 py-3 bg-[#d4b38d] hover:bg-[#b08d65] text-slate-950 font-bold rounded-lg shadow-lg shadow-[#d4b38d]/20 transition-all transform active:scale-95 whitespace-nowrap no-underline">
                    <span class="material-symbols-outlined text-lg">add_circle</span>
                    <span class="text-sm tracking-widest">YENİ PROJE</span>
                </a>
            </div>
        </div>

        <!-- Filter Tabs -->
        <div class="flex items-center gap-2 mb-8 overflow-x-auto pb-2 border-b border-white/5">
            <button class="@(statusFilter == "All" ? "glass-panel border-[#d4b38d] text-[#d4b38d]" : "text-slate-400 hover:text-[#f1f5f9]") px-5 py-2.5 rounded-lg text-[11px] font-bold tracking-widest uppercase transition-all"
                    @onclick='() => statusFilter = "All"'>Tümü</button>
            <button class="@(statusFilter == "Completed" ? "glass-panel border-[#d4b38d] text-[#d4b38d]" : "text-slate-400 hover:text-[#f1f5f9]") px-5 py-2.5 rounded-lg text-[11px] font-bold tracking-widest uppercase transition-all"
                    @onclick='() => statusFilter = "Completed"'>Tamamlanan</button>
            <button class="@(statusFilter == "Processing" ? "glass-panel border-[#d4b38d] text-[#d4b38d]" : "text-slate-400 hover:text-[#f1f5f9]") px-5 py-2.5 rounded-lg text-[11px] font-bold tracking-widest uppercase transition-all flex items-center gap-2"
                    @onclick='() => statusFilter = "Processing"'>
                İşleniyor
                <span class="flex h-2 w-2 relative">
                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[#d4b38d] opacity-75"></span>
                    <span class="relative inline-flex rounded-full h-2 w-2 bg-[#d4b38d]"></span>
                </span>
            </button>
        </div>

        @if (isLoading)
        {
            <div class="flex items-center justify-center py-32">
                <div class="relative w-16 h-16">
                    <div class="absolute inset-0 border-4 border-white/10 rounded-full"></div>
                    <div class="absolute inset-0 border-4 border-[#d4b38d] rounded-full border-t-transparent animate-spin"></div>
                </div>
            </div>
        }
        else if (projects.Count == 0)
        {
            <div class="text-center py-32 glass-panel rounded-2xl border border-white/5">
                <div class="w-20 h-20 mx-auto mb-6 glass-panel rounded-full flex items-center justify-center">
                    <span class="material-symbols-outlined text-4xl text-[#d4b38d]">photo_library</span>
                </div>
                <h3 class="text-2xl font-display font-semibold text-[#f1f5f9] mb-2">Henüz Proje Yok</h3>
                <p class="text-slate-400 mb-8 max-w-md mx-auto">İlk AI sanal deneme görselinizi oluşturmak için editöre başlayın.</p>
                <a href="/editor" class="inline-flex items-center gap-2 px-6 py-3 bg-[#d4b38d] hover:bg-[#b08d65] text-slate-950 rounded-lg font-bold tracking-widest text-sm transition-all shadow-lg shadow-[#d4b38d]/20 no-underline">
                    <span class="material-symbols-outlined">add_circle</span>
                    EDITÖRE GİT
                </a>
            </div>
        }
        else
        {
            <!-- Project Cards Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                @foreach (var project in FilteredProjects)
                {
                    <div class="group relative glass-panel rounded-xl overflow-hidden border border-white/10 hover:border-[#d4b38d]/50 transition-all duration-500 shadow-xl hover:shadow-2xl hover:shadow-[#d4b38d]/10">
                        <!-- Image Thumbnail -->
                        <div class="relative overflow-hidden aspect-[3/4] bg-gradient-to-br from-slate-800 to-slate-900 flex items-center justify-center">
                            <div class="absolute inset-0 bg-gradient-to-br from-[#d4b38d]/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                            <span class="material-symbols-outlined text-6xl text-slate-700 group-hover:text-[#d4b38d] transition-colors duration-500">auto_awesome</span>
                            
                            <!-- Hover Actions Overlay -->
                            <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 flex flex-col justify-end p-4">
                                <div class="flex gap-2 justify-center mb-2 translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                                    <a href="/editor?projectId=@project.Id" class="p-2.5 rounded-full bg-[#d4b38d] text-slate-950 hover:bg-[#b08d65] transition-colors shadow-lg no-underline">
                                        <span class="material-symbols-outlined text-lg">edit</span>
                                    </a>
                                    <button class="p-2.5 rounded-full bg-white/10 backdrop-blur-md text-white hover:bg-white/20 transition-colors shadow-lg">
                                        <span class="material-symbols-outlined text-lg">download</span>
                                    </button>
                                    <button class="p-2.5 rounded-full bg-white/10 backdrop-blur-md text-white hover:bg-white/20 transition-colors shadow-lg">
                                        <span class="material-symbols-outlined text-lg">share</span>
                                    </button>
                                </div>
                            </div>
                            
                            <!-- Status Badge -->
                            <div class="absolute top-3 right-3">
                                <span class="px-2.5 py-1 bg-green-500/20 backdrop-blur-md border border-green-500/30 rounded-full text-[9px] font-bold text-green-400 uppercase tracking-wider">
                                    Aktif
                                </span>
                            </div>
                        </div>
                        
                        <!-- Content Body -->
                        <div class="p-4 bg-slate-900/40 backdrop-blur-md">
                            <div class="flex justify-between items-start mb-3">
                                <div class="flex-1 min-w-0">
                                    <h3 class="font-display font-semibold text-[#f1f5f9] leading-tight m-0 truncate">@project.Name</h3>
                                    <p class="text-[10px] text-slate-400 mt-1.5 m-0 uppercase tracking-wider font-medium">@project.ImageCount Görsel</p>
                                </div>
                            </div>
                            <div class="flex items-center justify-between pt-3 border-t border-white/5">
                                <span class="text-[10px] text-slate-500 uppercase tracking-widest font-medium">@project.CreatedAt.ToString("dd MMM yyyy")</span>
                                <span class="material-symbols-outlined text-slate-600 text-sm group-hover:text-[#d4b38d] transition-colors">chevron_right</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private List<Giydir.Core.DTOs.ProjectDto> projects = new();
    private bool isLoading = true;
    private string statusFilter = "All";

    private IEnumerable<Giydir.Core.DTOs.ProjectDto> FilteredProjects => projects; // Simplified for now since DTO lacks Status field.

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadProjects();
        }
    }

    private async Task LoadProjects()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var token = await JSRuntime.InvokeAsync<string>("tokenStorage.getToken");
            if (!string.IsNullOrEmpty(token))
            {
                var request = new HttpRequestMessage(HttpMethod.Get, "api/projects");
                request.Headers.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);
                
                var response = await Http.SendAsync(request);
                if (response.IsSuccessStatusCode)
                {
                    projects = await response.Content.ReadFromJsonAsync<List<ProjectDto>>() ?? new();
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Proje yükleme hatası: {ex.Message}");
            projects = new();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}
