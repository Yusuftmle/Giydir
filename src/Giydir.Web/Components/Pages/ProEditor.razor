@page "/pro-editor"
@layout AuthLayout
@rendermode InteractiveServer

<div class="bg-[#f6f8f8] dark:bg-[#05090a] text-slate-800 dark:text-slate-200 h-screen flex flex-col overflow-hidden font-display">
    <!-- Header -->
    <header class="h-14 border-b border-slate-200 dark:border-white/5 flex items-center justify-between px-4 bg-[#f6f8f8] dark:bg-[#0c1416] z-50">
        <div class="flex items-center gap-6">
            <div class="flex items-center gap-2">
                <div class="w-8 h-8 bg-[#13c8ec] rounded flex items-center justify-center">
                    <span class="material-symbols-outlined text-[#05090a] text-xl font-bold">movie_filter</span>
                </div>
                <!-- Link back to home -->
                <a href="/" class="font-bold tracking-tight text-lg uppercase no-underline text-inherit">
                    Director's<span class="text-[#13c8ec]">Console</span>
                </a>
            </div>
            <div class="h-6 w-[1px] bg-white/10"></div>
            <div class="flex items-center gap-2 text-sm text-slate-400">
                <span class="text-slate-500">Scene Builder</span>
                <span class="material-symbols-outlined text-sm">chevron_right</span>
                <span class="text-slate-100 font-medium">Summer Collection 2024 Shoot</span>
            </div>
        </div>
        <div class="flex items-center gap-6">
            <div class="flex flex-col items-end gap-1">
                <div class="flex items-center gap-2 text-[10px] uppercase tracking-wider font-semibold text-slate-400">
                    <span>GPU Tokens</span>
                    <span class="text-[#13c8ec]">842 / 1000</span>
                </div>
                <div class="w-32 h-1.5 bg-white/10 rounded-full overflow-hidden">
                    <div class="h-full bg-[#13c8ec] w-[84%]"></div>
                </div>
            </div>
            <div class="h-6 w-[1px] bg-white/10"></div>
            <button class="bg-[#13c8ec] text-[#05090a] px-5 py-2 rounded-lg text-sm font-bold flex items-center gap-2 hover:brightness-110 transition-all">
                <span class="material-symbols-outlined text-sm">auto_fix_high</span>
                Generate Shoot
            </button>
        </div>
    </header>

    <div class="flex flex-1 overflow-hidden">
        <!-- Sidebar (Wardrobe) -->
        <aside class="w-72 border-r border-slate-200 dark:border-white/5 bg-[#f6f8f8] dark:bg-[#0c1416] flex flex-col">
            <div class="p-4 border-b border-white/5 flex items-center justify-between">
                <h2 class="font-bold text-[11px] uppercase tracking-widest text-slate-400">Wardrobe Selection</h2>
                <button class="p-1 hover:bg-white/5 rounded text-slate-400"><span class="material-symbols-outlined text-sm">settings</span></button>
            </div>
            <div class="flex-1 overflow-y-auto px-4 py-4 space-y-6 scrollbar-hide">
                <div>
                    <span class="text-[10px] uppercase font-bold text-slate-500 mb-3 block tracking-wider">Active Hero Piece</span>
                    <div class="relative aspect-[3/4] rounded-xl overflow-hidden group ring-2 ring-[#13c8ec]">
                        <img alt="Beige linen blazer" class="w-full h-full object-cover" src="https://images.unsplash.com/photo-1591047139829-d91aecb6caea?w=600&h=800&fit=crop" />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"></div>
                        <div class="absolute bottom-3 left-3">
                            <p class="text-[10px] font-bold text-white uppercase tracking-wider">Tailored Linen Blazer</p>
                            <p class="text-[8px] text-[#13c8ec] font-medium tracking-widest uppercase">Sandstone Beige</p>
                        </div>
                    </div>
                </div>
                <div>
                    <span class="text-[10px] uppercase font-bold text-slate-500 mb-3 block tracking-wider">Layering Items</span>
                    <div class="grid grid-cols-2 gap-3">
                        <div class="aspect-square rounded-lg bg-white/5 border border-white/10 overflow-hidden cursor-pointer hover:border-[#13c8ec]/50 transition-colors">
                            <img alt="Black silk shirt" class="w-full h-full object-cover" src="https://images.unsplash.com/photo-1603252109303-2751440ee78c?w=300&h=300&fit=crop" />
                        </div>
                        <div class="aspect-square rounded-lg bg-white/5 border border-white/10 overflow-hidden cursor-pointer hover:border-[#13c8ec]/50 transition-colors">
                            <img alt="White oxford shirt" class="w-full h-full object-cover" src="https://images.unsplash.com/photo-1521572163474-6864f9cf17ab?w=300&h=300&fit=crop" />
                        </div>
                        <div class="aspect-square rounded-lg bg-white/5 border border-white/10 overflow-hidden cursor-pointer hover:border-[#13c8ec]/50 transition-colors">
                            <img alt="Leather jacket" class="w-full h-full object-cover opacity-50" src="https://images.unsplash.com/photo-1551028919-ac7675cf5063?w=300&h=300&fit=crop" />
                        </div>
                        <button class="aspect-square rounded-lg border-2 border-dashed border-white/10 flex flex-col items-center justify-center gap-1 hover:bg-white/5 transition-colors">
                            <span class="material-symbols-outlined text-slate-500 text-lg">add</span>
                            <span class="text-[9px] font-bold text-slate-500 uppercase">Import</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="p-4 border-t border-white/5">
                <div class="bg-[#121d20] rounded-lg p-3 border border-white/5">
                    <div class="flex items-center gap-2 mb-2">
                        <span class="material-symbols-outlined text-[#13c8ec] text-xs">info</span>
                        <span class="text-[9px] font-bold uppercase tracking-widest text-slate-400">Fabric Simulation</span>
                    </div>
                    <div class="text-[10px] text-slate-500 leading-relaxed">
                        High-fidelity drape enabled for linen blend assets.
                    </div>
                </div>
            </div>
        </aside>

        <!-- Main Canvas -->
        <main class="flex-1 bg-[#f6f8f8] dark:bg-[#05090a] relative flex flex-col overflow-hidden">
            <div class="flex-1 relative flex items-center justify-center overflow-hidden p-8" 
                 style="background-image: radial-gradient(circle, #1a2e32 1px, transparent 1px); background-size: 40px 40px;">
                <div class="relative max-w-[560px] w-full aspect-[4/5] bg-[#0c1416] rounded-2xl shadow-[0_40px_100px_rgba(0,0,0,0.8)] overflow-hidden ring-1 ring-white/10">
                    <img alt="Preview" class="w-full h-full object-cover" src="https://images.unsplash.com/photo-1534528741775-53994a69daeb?w=1200&h=1600&fit=crop" />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent"></div>
                    <div class="absolute top-6 left-6 flex items-center gap-3">
                        <div class="bg-black/80 backdrop-blur-md border border-white/10 px-3 py-1.5 rounded-full flex items-center gap-2">
                            <div class="w-2 h-2 rounded-full bg-[#13c8ec] shadow-[0_0_8px_#13c8ec]"></div>
                            <span class="text-[10px] font-bold text-white uppercase tracking-widest">Live Preview</span>
                        </div>
                        <div class="bg-black/80 backdrop-blur-md border border-white/10 px-3 py-1.5 rounded-full">
                            <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">4K Render Mode</span>
                        </div>
                    </div>
                    <div class="absolute bottom-6 left-6 right-6 flex items-center justify-between">
                        <div class="flex gap-2">
                            <button class="bg-white/10 backdrop-blur-md border border-white/10 p-2 rounded-lg text-white hover:bg-white/20 transition-all">
                                <span class="material-symbols-outlined text-xl">zoom_in</span>
                            </button>
                            <button class="bg-white/10 backdrop-blur-md border border-white/10 p-2 rounded-lg text-white hover:bg-white/20 transition-all">
                                <span class="material-symbols-outlined text-xl">crop_free</span>
                            </button>
                        </div>
                        <div class="flex gap-2">
                            <button class="bg-white/10 backdrop-blur-md border border-white/10 px-4 py-2 rounded-lg text-xs font-bold text-white uppercase tracking-widest flex items-center gap-2 hover:bg-white/20 transition-all">
                                <span class="material-symbols-outlined text-sm">history</span>
                                History
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Floating Action Bar -->
            <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex items-center gap-4 bg-[#0c1416]/80 backdrop-blur-xl p-2 rounded-2xl border border-white/10 shadow-2xl">
                <button class="bg-[#13c8ec] text-[#05090a] px-8 py-4 rounded-xl font-bold flex items-center gap-3 shadow-xl hover:scale-105 transition-all">
                    <span class="material-symbols-outlined">auto_fix_high</span>
                    Generate Final Shoot
                </button>
                <div class="h-10 w-[1px] bg-white/10"></div>
                <button class="p-3 text-slate-400 hover:text-white transition-colors" title="Compare View">
                    <span class="material-symbols-outlined">compare_arrows</span>
                </button>
                <button class="p-3 text-slate-400 hover:text-white transition-colors" title="Export Frames">
                    <span class="material-symbols-outlined">download</span>
                </button>
            </div>
        </main>

        <!-- Right Sidebar (Controls) -->
        <aside class="w-[420px] border-l border-slate-200 dark:border-white/5 bg-[#f6f8f8] dark:bg-[#0c1416] flex flex-col overflow-hidden">
            <div class="p-5 border-b border-white/5 flex items-center justify-between bg-white/[0.02]">
                <div>
                    <h2 class="font-bold text-sm tracking-tight text-white">Model &amp; Environment Selector</h2>
                    <p class="text-[10px] text-slate-500 uppercase tracking-widest font-medium mt-0.5">Studio Directing Module</p>
                </div>
                <span class="material-symbols-outlined text-[#13c8ec]">theater_comedy</span>
            </div>
            
            <div class="flex-1 overflow-y-auto scrollbar-hide p-5 space-y-8">
                <!-- Lighting -->
                <div>
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-[11px] font-bold uppercase tracking-widest text-slate-400">Lighting Profiles</h3>
                        <span class="text-[10px] text-[#13c8ec] font-bold">Virtual HDR</span>
                    </div>
                    <div class="grid grid-cols-3 gap-2 bg-black/20 p-1.5 rounded-xl border border-white/5">
                        <button class="flex flex-col items-center gap-1.5 py-3 rounded-lg hover:bg-white/5 transition-all">
                            <span class="material-symbols-outlined text-slate-400">wb_sunny</span>
                            <span class="text-[9px] font-bold uppercase tracking-tighter text-slate-500">Natural</span>
                        </button>
                        <button class="flex flex-col items-center gap-1.5 py-3 rounded-lg bg-[#121d20] border border-[#13c8ec]/20 transition-all">
                            <span class="material-symbols-outlined text-[#13c8ec]">movie_filter</span>
                            <span class="text-[9px] font-bold uppercase tracking-tighter text-[#13c8ec]">Cinematic</span>
                        </button>
                        <button class="flex flex-col items-center gap-1.5 py-3 rounded-lg hover:bg-white/5 transition-all">
                            <span class="material-symbols-outlined text-slate-400">light_mode</span>
                            <span class="text-[9px] font-bold uppercase tracking-tighter text-slate-500">High-Key</span>
                        </button>
                    </div>
                </div>

                <!-- Cast & Scene -->
                <div>
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-[11px] font-bold uppercase tracking-widest text-slate-400">Select Cast &amp; Scene</h3>
                        <button class="text-[10px] font-bold text-[#13c8ec] flex items-center gap-1 hover:underline">
                            <span>All Talents</span>
                            <span class="material-symbols-outlined text-sm">arrow_right_alt</span>
                        </button>
                    </div>
                    
                    <div class="space-y-6">
                        <!-- Talent 1 -->
                        <div class="space-y-3">
                            <div class="relative group aspect-[16/9] rounded-xl overflow-hidden ring-1 ring-white/10 hover:ring-[#13c8ec]/40 transition-all cursor-pointer">
                                <img alt="Model 1" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700" src="https://images.unsplash.com/photo-1531746020798-e6953c6e8e04?w=600&h=338&fit=crop" />
                                <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent"></div>
                                <div class="absolute bottom-3 left-3 flex items-center justify-between w-[calc(100%-24px)]">
                                    <div>
                                        <p class="text-[11px] font-bold text-white uppercase tracking-wider">Elena Rossi</p>
                                        <p class="text-[9px] text-slate-400 uppercase">Height: 178cm | UK 8</p>
                                    </div>
                                    <span class="material-symbols-outlined text-[#13c8ec] text-xl">check_circle</span>
                                </div>
                            </div>
                            <div class="flex flex-wrap gap-2">
                                <button class="px-3 py-1.5 rounded-full bg-[#13c8ec]/10 border border-[#13c8ec]/30 text-[9px] font-bold text-[#13c8ec] uppercase tracking-tight">Walking in Milan</button>
                                <button class="px-3 py-1.5 rounded-full bg-white/5 border border-white/5 text-[9px] font-bold text-slate-500 uppercase tracking-tight hover:border-white/20">Studio Portrait</button>
                            </div>
                        </div>

                        <!-- Talent 2 -->
                         <div class="space-y-3">
                            <div class="relative group aspect-[16/9] rounded-xl overflow-hidden ring-1 ring-white/10 transition-all cursor-pointer opacity-70 hover:opacity-100">
                                <img alt="Model 2" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700" src="https://images.unsplash.com/photo-1506794778202-cad84cf45f1d?w=600&h=338&fit=crop" />
                                <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent"></div>
                                <div class="absolute bottom-3 left-3">
                                    <p class="text-[11px] font-bold text-white uppercase tracking-wider">Julian Chen</p>
                                    <p class="text-[9px] text-slate-400 uppercase">Height: 188cm | UK 40R</p>
                                </div>
                            </div>
                            <div class="flex flex-wrap gap-2">
                                <button class="px-3 py-1.5 rounded-full bg-white/5 border border-white/5 text-[9px] font-bold text-slate-500 uppercase tracking-tight hover:border-white/20">Parisian Street</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Atmosphere Controls -->
            <div class="pb-10 pt-6 px-5 border-t border-white/5 bg-[#0c1416]/50">
                <h3 class="text-[11px] font-bold uppercase tracking-widest text-slate-400 mb-5">Atmospheric Controls</h3>
                <div class="space-y-6">
                    <div>
                        <div class="flex justify-between text-[10px] uppercase font-bold text-slate-500 mb-2">
                            <span>Focal Depth (Blur)</span>
                            <span class="text-[#13c8ec]">f/2.8</span>
                        </div>
                        <input class="w-full h-1 bg-[#162b2f] rounded-full appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:w-3 [&::-webkit-slider-thumb]:h-3 [&::-webkit-slider-thumb]:bg-[#13c8ec] [&::-webkit-slider-thumb]:rounded-full" type="range" value="30" />
                    </div>
                    <div>
                        <div class="flex justify-between text-[10px] uppercase font-bold text-slate-500 mb-2">
                            <span>Color Temperature</span>
                            <span class="text-[#13c8ec]">5400K</span>
                        </div>
                        <div class="h-1 w-full bg-gradient-to-r from-blue-400 via-white to-orange-400 rounded-full relative">
                            <div class="absolute top-1/2 -translate-y-1/2 left-[45%] w-3 h-3 bg-white ring-2 ring-[#13c8ec] rounded-full cursor-pointer"></div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="mt-auto p-4 border-t border-white/5 bg-black/40">
                <div class="flex items-center justify-between text-[10px] text-slate-500 uppercase tracking-widest">
                    <span class="flex items-center gap-1.5">
                        <span class="w-1.5 h-1.5 rounded-full bg-green-500"></span>
                        Engine: Ultra-Real v2
                    </span>
                    <span class="hover:text-[#13c8ec] cursor-pointer">Documentation</span>
                </div>
            </div>
        </aside>
    </div>
</div>

