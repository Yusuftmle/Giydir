@page "/login"
@layout AuthLayout
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject ILogger<Login> Logger
@rendermode InteractiveServer

@code {
    private string email = string.Empty;
    private string password = string.Empty;
    private bool rememberMe = false;
    private bool isLoading = false;
    private string? errorMessage;

    private async Task HandleLogin()
    {
        if (string.IsNullOrWhiteSpace(email) || string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "E-posta ve şifre gereklidir.";
            return;
        }

        isLoading = true;
        errorMessage = null;

        try
        {
            var loginDto = new LoginDto { Email = email, Password = password };
            var response = await Http.PostAsJsonAsync("api/auth/login", loginDto);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<AuthResponseDto>();
                if (result?.Success == true && !string.IsNullOrEmpty(result.Token))
                {
                    // Token'ı tarayıcıda localStorage + cookie'ye kaydet
                    await JSRuntime.InvokeVoidAsync("tokenStorage.setToken", result.Token);
                    
                    // forceLoad: true → tam sayfa yenilemesi, tarayıcı cookie'yi gönderir
                    Navigation.NavigateTo("/", forceLoad: true);
                }
                else
                {
                    errorMessage = result?.Error ?? "Giriş başarısız oldu.";
                }
            }
            else
            {
                try
                {
                    var error = await response.Content.ReadFromJsonAsync<AuthResponseDto>();
                    errorMessage = error?.Error ?? "Giriş başarısız oldu. Lütfen tekrar deneyin.";
                }
                catch
                {
                    errorMessage = $"Giriş başarısız oldu. Status: {response.StatusCode}";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Bir hata oluştu: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}

<div class="min-h-screen flex items-center justify-center bg-background-dark relative overflow-hidden">
    <!-- Background decorations -->
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-primary/10 blur-[120px] rounded-full pointer-events-none"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-purple-500/10 blur-[120px] rounded-full pointer-events-none"></div>

    <div class="relative z-10 w-full max-w-md px-6">
        <!-- Logo -->
        <div class="text-center mb-10">
            <a href="/" class="inline-flex items-center gap-2 no-underline mb-6">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-primary to-blue-600 flex items-center justify-center text-white font-bold text-2xl shadow-lg shadow-primary/20">
                    G
                </div>
            </a>
            <h1 class="text-3xl font-bold text-white mb-2">Tekrar Hoş Geldiniz</h1>
            <p class="text-gray-400">Hesabınıza giriş yaparak devam edin</p>
        </div>

        <!-- Login Card -->
        <div class="glass rounded-2xl p-8 border border-white/5 shadow-2xl">
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="mb-4 p-3 bg-red-500/10 border border-red-500/20 rounded-lg text-red-400 text-sm">
                    @errorMessage
                </div>
            }

            <form @onsubmit="HandleLogin" @onsubmit:preventDefault="true">
                <!-- Email -->
                <div class="mb-5">
                    <label class="block text-sm font-medium text-gray-300 mb-2">E-posta Adresi</label>
                    <div class="relative">
                        <span class="material-icons-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 text-lg">mail</span>
                        <input @bind="email" @bind:event="oninput" type="email" placeholder="ornek@butik.com"
                               class="w-full pl-10 pr-4 py-3 bg-background-dark/50 border border-gray-700 rounded-xl text-white placeholder-gray-500 focus:ring-2 focus:ring-primary focus:border-primary transition-all" />
                    </div>
                </div>

                <!-- Password -->
                <div class="mb-5">
                    <div class="flex items-center justify-between mb-2">
                        <label class="block text-sm font-medium text-gray-300">Şifre</label>
                        <a href="#" class="text-xs text-primary hover:text-primary/80 no-underline">Şifremi Unuttum</a>
                    </div>
                    <div class="relative">
                        <span class="material-icons-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 text-lg">lock</span>
                        <input @bind="password" @bind:event="oninput" type="password" placeholder="••••••••"
                               class="w-full pl-10 pr-4 py-3 bg-background-dark/50 border border-gray-700 rounded-xl text-white placeholder-gray-500 focus:ring-2 focus:ring-primary focus:border-primary transition-all" />
                    </div>
                </div>

                <!-- Remember Me -->
                <div class="flex items-center gap-2 mb-6">
                    <input @bind="rememberMe" type="checkbox" id="remember" class="w-4 h-4 rounded border-gray-600 bg-background-dark text-primary focus:ring-primary" />
                    <label for="remember" class="text-sm text-gray-400">Beni hatırla</label>
                </div>

                <!-- Submit -->
                <button type="submit" disabled="@isLoading" class="w-full py-3.5 bg-primary hover:bg-blue-500 disabled:opacity-50 disabled:cursor-not-allowed text-background-dark font-bold rounded-xl shadow-lg shadow-primary/25 transition-all transform active:scale-[0.98] flex items-center justify-center gap-2">
                    @if (isLoading)
                    {
                        <div class="w-5 h-5 border-2 border-background-dark border-t-transparent rounded-full animate-spin"></div>
                        <span>Giriş yapılıyor...</span>
                    }
                    else
                    {
                        <span class="material-icons-outlined text-lg">login</span>
                        <span>Giriş Yap</span>
                    }
                </button>
            </form>

            <!-- Divider -->
            <div class="flex items-center gap-4 my-6">
                <div class="flex-1 h-px bg-gray-700"></div>
                <span class="text-xs text-gray-500 uppercase">veya</span>
                <div class="flex-1 h-px bg-gray-700"></div>
            </div>

            <!-- Social Login -->
            <button class="w-full py-3 bg-white/5 hover:bg-white/10 border border-white/10 rounded-xl text-white font-medium transition-all flex items-center justify-center gap-3">
                <svg class="w-5 h-5" viewBox="0 0 24 24"><path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 0 1-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z"/><path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
                Google ile Giriş Yap
            </button>
        </div>

        <!-- Register Link -->
        <p class="text-center mt-8 text-gray-400 text-sm">
            Hesabınız yok mu?
            <a href="/register" class="text-primary font-semibold hover:text-primary/80 no-underline ml-1">Ücretsiz Kayıt Ol</a>
        </p>
    </div>
</div>

