@page "/login"
@layout AuthLayout
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject ILogger<Login> Logger
@rendermode InteractiveServer

@code {
    private string email = string.Empty;
    private string password = string.Empty;
    private bool rememberMe = false;
    private bool isLoading = false;
    private string? errorMessage;

    private async Task HandleLogin()
    {
        if (string.IsNullOrWhiteSpace(email) || string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "E-posta ve şifre gereklidir.";
            return;
        }

        isLoading = true;
        errorMessage = null;

        try
        {
            var loginDto = new LoginDto { Email = email, Password = password };
            var response = await Http.PostAsJsonAsync("api/auth/login", loginDto);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<AuthResponseDto>();
                if (result?.Success == true && !string.IsNullOrEmpty(result.Token))
                {
                    // Token'ı tarayıcıda localStorage + cookie'ye kaydet
                    await JSRuntime.InvokeVoidAsync("tokenStorage.setToken", result.Token);

                    // Admin ise admin paneline, değilse ana sayfaya yönlendir
                    // Not: Token içindeki role'u client-side'da decode edip bakabiliriz
                    // Ama forceLoad: true ile refresh yaptığımız için AuthStateProvider kontrol edecek.
                    // Şimdilik e-posta bazlı hızlı bir kontrol yapabiliriz ya da returnUrl mantığı.
                    
                    if (email.ToLower().EndsWith("@giydir.ai"))
                    {
                        Navigation.NavigateTo("/admin/dashboard", forceLoad: true);
                    }
                    else
                    {
                        Navigation.NavigateTo("/", forceLoad: true);
                    }
                }
                else
                {
                    errorMessage = result?.Error ?? "Giriş başarısız oldu.";
                }
            }
            else
            {
                try
                {
                    var error = await response.Content.ReadFromJsonAsync<AuthResponseDto>();
                    errorMessage = error?.Error ?? "Giriş başarısız oldu. Lütfen tekrar deneyin.";
                }
                catch
                {
                    errorMessage = $"Giriş başarısız oldu. Status: {response.StatusCode}";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Bir hata oluştu: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}

<div class="h-screen flex overflow-hidden bg-[#F9F8F6]">
    <!-- Left Side - Editorial Image (Hidden on mobile) -->
    <section class="hidden lg:block w-7/12 relative h-full overflow-hidden">
        <div class="w-full h-full bg-cover bg-center editorial-image" style="background-image: url('https://images.unsplash.com/photo-1509631179647-0177331693ae?w=1200&h=1600&fit=crop');">
            <!-- Gradient Overlay -->
            <div class="absolute inset-0 bg-gradient-to-r from-transparent to-black/10"></div>
            
            <!-- Bottom Brand Badge -->
            <div class="absolute bottom-12 left-12">
                <div class="flex items-center gap-3">
                    <div class="w-8 h-8 bg-[#121212] flex items-center justify-center">
                        <span class="text-[#F9F8F6] font-bold text-[10px] tracking-tighter">NB</span>
                    </div>
                    <span class="text-[#F9F8F6] text-xs font-medium tracking-[0.25em] uppercase">Private Collection</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Right Side - Login Form -->
    <section class="w-full lg:w-5/12 flex flex-col justify-center px-12 xl:px-24 bg-[#F9F8F6] overflow-y-auto">
        <div class="max-w-md w-full mx-auto">
            <!-- Back Link -->
            <div class="mb-16">
                <a class="inline-flex items-center text-[10px] font-medium tracking-[0.25em] uppercase text-gray-400 hover:text-[#121212] transition-colors no-underline" href="/">
                    <span class="material-symbols-outlined text-[14px] mr-2">west</span>
                    Return to Studio
                </a>
            </div>

            <!-- Header -->
            <header class="mb-12">
                <h1 class="text-3xl font-display font-light tracking-[0.15em] mb-3 uppercase">Welcome Back</h1>
                <p class="text-sm text-gray-500 font-light tracking-wide leading-relaxed">
                    Enter your credentials to access the NanoBanana <br/>Generative AI Dashboard.
                </p>
            </header>

            <!-- Error Message -->
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg text-red-600 text-sm">
                    <div class="flex items-center gap-2">
                        <span class="material-symbols-outlined text-base">error</span>
                        <span>@errorMessage</span>
                    </div>
                </div>
            }

            <!-- Login Form -->
            <form @onsubmit="HandleLogin" @onsubmit:preventDefault="true" class="space-y-8">
                <div class="space-y-6">
                    <!-- Email -->
                    <div class="group">
                        <label class="block text-[10px] font-bold uppercase tracking-[0.25em] text-gray-400 mb-1 group-focus-within:text-[#121212] transition-colors" for="email">
                            Identity
                        </label>
                        <input class="input-premium" 
                               id="email" 
                               placeholder="Email address" 
                               required
                               type="email"
                               @bind="email" 
                               @bind:event="oninput" />
                    </div>

                    <!-- Password -->
                    <div class="group">
                        <div class="flex justify-between items-end mb-1">
                            <label class="block text-[10px] font-bold uppercase tracking-[0.25em] text-gray-400 group-focus-within:text-[#121212] transition-colors" for="password">
                                Security
                            </label>
                            <a class="text-[10px] font-medium uppercase tracking-widest text-gray-400 hover:text-[#121212] transition-colors no-underline" href="/forgot-password">Reset</a>
                        </div>
                        <input class="input-premium" 
                               id="password" 
                               placeholder="Password" 
                               required
                               type="password"
                               @bind="password" 
                               @bind:event="oninput" />
                    </div>
                </div>

                <!-- Remember Me -->
                <div class="flex items-center gap-3 py-2">
                    <input class="w-3.5 h-3.5 border-[rgba(18,18,18,0.1)] rounded-none focus:ring-0 checked:bg-[#121212] text-[#121212]" 
                           id="remember" 
                           type="checkbox"
                           @bind="rememberMe" />
                    <label class="text-[10px] font-medium tracking-[0.25em] uppercase text-gray-500 cursor-pointer" for="remember">
                        Stay authenticated
                    </label>
                </div>

                <!-- Submit Button -->
                <button type="submit" 
                        disabled="@isLoading" 
                        class="glass-button w-full py-5 rounded-lg text-[#F9F8F6] font-bold text-[11px] tracking-[0.25em] uppercase transition-all hover:scale-[1.02] active:scale-[0.98] disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center gap-3">
                    @if (isLoading)
                    {
                        <div class="w-4 h-4 border-2 border-[#F9F8F6] border-t-transparent rounded-full animate-spin"></div>
                        <span>Authenticating...</span>
                    }
                    else
                    {
                        <span class="material-symbols-outlined text-base">arrow_forward</span>
                        <span>Enter Dashboard</span>
                    }
                </button>
            </form>

            <!-- Divider -->
            <div class="my-10 relative">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-[rgba(18,18,18,0.1)]"></div>
                </div>
                <div class="relative flex justify-center">
                    <span class="bg-[#F9F8F6] px-6 text-[9px] font-bold tracking-[0.2em] uppercase text-gray-400">Or Continue With</span>
                </div>
            </div>

            <!-- Social Login -->
            <button type="button" class="w-full py-4 border border-[rgba(18,18,18,0.1)] rounded-lg text-[#121212] font-medium text-sm tracking-wide hover:bg-[#121212] hover:text-[#F9F8F6] transition-all flex items-center justify-center gap-3">
                <svg class="w-5 h-5" viewBox="0 0 24 24">
                    <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 0 1-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z"/>
                    <path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                    <path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                    <path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
                <span class="tracking-widest text-[11px] uppercase font-bold">Google Account</span>
            </button>

            <!-- Register Link -->
            <div class="mt-12 pt-8 border-t border-[rgba(18,18,18,0.1)]">
                <p class="text-center text-[11px] tracking-widest uppercase text-gray-400">
                    New to NanoBanana?
                    <a href="/register" class="text-[#121212] font-bold hover:underline ml-2 no-underline">Create Account</a>
                </p>
            </div>

            <!-- Footer Info -->
            <div class="mt-16 text-center">
                <p class="text-[9px] tracking-[0.2em] uppercase text-gray-400 leading-relaxed">
                    By continuing, you agree to our<br/>
                    <a href="#" class="hover:text-[#121212] transition-colors no-underline">Terms of Service</a> and 
                    <a href="#" class="hover:text-[#121212] transition-colors no-underline">Privacy Policy</a>
                </p>
            </div>
        </div>
    </section>
</div>
