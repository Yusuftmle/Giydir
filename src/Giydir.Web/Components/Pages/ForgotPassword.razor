@page "/forgot-password"
@layout AuthLayout
@inject NavigationManager Navigation
@rendermode InteractiveServer

<div class="h-screen flex items-center justify-center bg-[#F9F8F6] p-6">
    <main class="w-full max-w-[440px] animate-fade-in">
        <!-- Brand Logo -->
        <div class="flex justify-center mb-24">
            <div class="flex items-center gap-3">
                <div class="w-7 h-7 bg-[#121212] flex items-center justify-center">
                    <span class="text-white font-bold text-[9px] tracking-tighter">NB</span>
                </div>
                <span class="text-[#121212] text-[10px] font-medium tracking-[0.25em] uppercase">Studio Access</span>
            </div>
        </div>

        @if (!isSuccess)
        {
            <!-- Recovery Form -->
            <section class="space-y-12">
                <header class="text-center">
                    <h1 class="text-2xl font-display font-light tracking-[0.15em] mb-4 uppercase">Reset Access</h1>
                    <p class="text-xs text-gray-500 font-light tracking-widest leading-relaxed max-w-xs mx-auto">
                        Enter your registered email to receive a secure recovery link.
                    </p>
                </header>

                <form @onsubmit="HandleSubmit" class="space-y-10">
                    <div class="group">
                        <label class="block text-[10px] font-bold uppercase tracking-[0.25em] text-gray-400 mb-1 group-focus-within:text-[#121212] transition-colors" for="email">
                            Security Identification
                        </label>
                        <input class="w-full bg-transparent border-t-0 border-x-0 border-b border-[rgba(18,18,18,0.08)] py-4 px-0 focus:ring-0 focus:border-[#121212] transition-colors duration-500 placeholder:text-gray-300 text-sm tracking-[0.15em]"
                               id="email"
                               placeholder="email@boutique.com"
                               required
                               type="email"
                               @bind="email" />
                    </div>

                    <div class="space-y-6">
                        <button class="w-full py-5 text-white text-[11px] font-bold uppercase tracking-[0.25em] transition-all duration-500 hover:tracking-[0.3em] shadow-sm bg-[#121212]/90 backdrop-blur-md border border-white/10 hover:bg-[#121212]" type="submit">
                            Send Recovery Link
                        </button>
                        <div class="text-center">
                            <a class="text-[10px] font-medium tracking-[0.25em] uppercase text-gray-400 hover:text-[#121212] transition-colors inline-flex items-center gap-2 no-underline" href="/login">
                                <span class="material-symbols-outlined text-[14px]">arrow_back</span>
                                Back to Sign In
                            </a>
                        </div>
                    </div>
                </form>
            </section>
        }
        else
        {
            <!-- Success State -->
            <section class="space-y-12 text-center animate-fade-in">
                <div class="flex justify-center">
                    <div class="w-16 h-16 rounded-full border border-[rgba(18,18,18,0.08)] flex items-center justify-center">
                        <span class="material-symbols-outlined text-[#121212] font-light text-2xl">mail</span>
                    </div>
                </div>

                <header>
                    <h2 class="text-2xl font-display font-light tracking-[0.15em] mb-4 uppercase">Link Sent</h2>
                    <p class="text-xs text-gray-500 font-light tracking-widest leading-relaxed max-w-xs mx-auto">
                        An encryption key has been dispatched to your inbox. Please follow the instructions to restore your studio access.
                    </p>
                </header>

                <div class="pt-8 border-t border-[rgba(18,18,18,0.08)]">
                    <p class="text-[9px] font-medium tracking-[0.25em] uppercase text-gray-400 mb-6">Didn't receive it?</p>
                    <button class="text-[10px] font-bold uppercase tracking-[0.25em] text-[#121212] hover:opacity-70 transition-opacity bg-transparent border-none cursor-pointer" @onclick="ResendLink">
                        Resend Link
                    </button>
                </div>
                
                 <div class="text-center mt-6">
                    <a class="text-[10px] font-medium tracking-[0.25em] uppercase text-gray-400 hover:text-[#121212] transition-colors inline-flex items-center gap-2 no-underline" href="/login">
                        <span class="material-symbols-outlined text-[14px]">arrow_back</span>
                        Back to Login
                    </a>
                </div>
            </section>
        }
    </main>
</div>

@code {
    private string email = "";
    private bool isSuccess = false;

    private void HandleSubmit()
    {
        // Mock sending email
        if (!string.IsNullOrWhiteSpace(email))
        {
            isSuccess = true;
        }
    }

    private void ResendLink()
    {
        // Mock resend
        StateHasChanged();
    }
}
