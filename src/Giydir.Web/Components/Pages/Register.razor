@page "/register"
@layout AuthLayout
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<!-- Registration Container -->
<main class="w-full h-screen flex overflow-hidden">
    <!-- Left Side: Immersive Imagery -->
    <section class="hidden lg:flex lg:w-1/2 relative overflow-hidden bg-slate-800">
        <div class="absolute inset-0 bg-gradient-to-r from-black/40 via-transparent to-transparent z-10"></div>
        <img alt="Fashion Studio" class="absolute inset-0 w-full h-full object-cover" src="https://images.unsplash.com/photo-1490481651871-ab68de25d43d?q=80&w=2070&auto=format&fit=crop" />
        
        <div class="absolute inset-0 flex flex-col justify-end p-20 z-20 text-white">
            <div class="max-w-md">
                <span class="text-xs uppercase tracking-[0.3em] font-semibold mb-4 block text-[#d4b38d]/80">Moda'da Yenilik</span>
                <h2 class="font-serif text-5xl mb-6 leading-tight">AI ile koleksiyonunuzu bir üst seviyeye taşıyın.</h2>
                <p class="text-lg font-light text-white/80 leading-relaxed">
                    Dünyanın en gelişmiş sanal deneme teknolojisini kullanarak çevrimiçi alışveriş deneyimini yeniden tanımlayan seçkin butik sahipleri topluluğuna katılın.
                </p>
            </div>
        </div>
        
        <!-- Floating Preview Card -->
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 z-20 w-80 h-96 rounded-xl overflow-hidden shadow-2xl border border-white/20 backdrop-blur-md">
            <img alt="AI Try-on" class="w-full h-full object-cover" src="https://images.unsplash.com/photo-1483985988355-763728e1935b?q=80&w=2070&auto=format&fit=crop" />
            <div class="absolute bottom-4 left-4 right-4 p-4 bg-black/40 backdrop-blur-md rounded-lg border border-white/10">
                <div class="flex items-center justify-between">
                    <span class="text-[10px] uppercase tracking-widest text-white/70">AI Studio Durumu</span>
                    <span class="flex h-2 w-2 rounded-full bg-green-400"></span>
                </div>
                <p class="text-white text-sm font-medium mt-1">Sanal Render Aktif</p>
            </div>
        </div>
    </section>
    
    <!-- Right Side: Minimalist Form -->
    <section class="w-full lg:w-1/2 bg-[#F9F8F6] dark:bg-slate-950 flex flex-col justify-center items-center px-8 sm:px-16 lg:px-24">
        <div class="w-full max-w-md space-y-10">
            <!-- Header -->
            <header class="text-left space-y-2">
                <div class="flex items-center space-x-2 mb-8">
                    <div class="w-10 h-10 bg-[#d4b38d] rounded-xl flex items-center justify-center">
                        <span class="material-symbols-outlined text-slate-950 text-xl font-bold">auto_awesome</span>
                    </div>
                    <span class="text-xl font-bold tracking-tight text-slate-900 dark:text-white">GIYDIR<span class="text-[#d4b38d]">.AI</span></span>
                </div>
                <h1 class="font-serif text-4xl lg:text-5xl text-gray-900 dark:text-white leading-tight">Stüdyoya Katılın</h1>
                <p class="text-gray-500 dark:text-gray-400 font-light">AI Sanal Deneme Stüdyonuza erişmek için bir hesap oluşturun.</p>
            </header>
            
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="p-4 bg-red-500/10 border border-red-500/20 rounded-lg text-red-600 dark:text-red-400 text-sm">
                    @errorMessage
                </div>
            }
            
            <!-- Form -->
            <form @onsubmit="HandleRegister" @onsubmit:preventDefault="true" class="space-y-6">
                <div class="grid grid-cols-1 gap-6">
                    <div class="space-y-1">
                        <label class="text-xs uppercase tracking-widest font-semibold text-gray-500 dark:text-gray-400" for="full-name">Ad Soyad</label>
                        <input @bind="name" @bind:event="oninput" class="w-full px-4 py-3 bg-white dark:bg-white/5 border border-gray-200 dark:border-white/10 rounded-sm focus:outline-none focus:border-[#d4b38d] focus:ring-1 focus:ring-[#d4b38d] transition-colors placeholder:text-gray-300 dark:placeholder:text-gray-600" id="full-name" placeholder="Adınız Soyadınız" type="text" />
                    </div>
                    <div class="space-y-1">
                        <label class="text-xs uppercase tracking-widest font-semibold text-gray-500 dark:text-gray-400" for="email">E-posta Adresi</label>
                        <input @bind="email" @bind:event="oninput" class="w-full px-4 py-3 bg-white dark:bg-white/5 border border-gray-200 dark:border-white/10 rounded-sm focus:outline-none focus:border-[#d4b38d] focus:ring-1 focus:ring-[#d4b38d] transition-colors placeholder:text-gray-300 dark:placeholder:text-gray-600" id="email" placeholder="ornek@butik.com" type="email" required />
                    </div>
                    <div class="space-y-1 relative">
                        <label class="text-xs uppercase tracking-widest font-semibold text-gray-500 dark:text-gray-400" for="password">Şifre Oluştur</label>
                        <input @bind="password" @bind:event="oninput" class="w-full px-4 py-3 bg-white dark:bg-white/5 border border-gray-200 dark:border-white/10 rounded-sm focus:outline-none focus:border-[#d4b38d] focus:ring-1 focus:ring-[#d4b38d] transition-colors placeholder:text-gray-300 dark:placeholder:text-gray-600" id="password" placeholder="••••••••" type="password" required />
                    </div>
                    
                    <!-- Terms -->
                    <div class="flex items-start gap-2">
                        <input @bind="termsAccepted" type="checkbox" id="terms" class="w-4 h-4 mt-1 rounded border-gray-300 dark:border-slate-600 bg-white dark:bg-slate-900 text-[#d4b38d] focus:ring-[#d4b38d]" />
                        <label for="terms" class="text-sm text-gray-600 dark:text-slate-400">
                            <a href="#" class="text-[#d4b38d] hover:underline no-underline">Kullanım Şartları</a>'nı ve
                            <a href="#" class="text-[#d4b38d] hover:underline no-underline">Gizlilik Politikası</a>'nı kabul ediyorum
                        </label>
                    </div>
                </div>
                
                <div class="pt-4">
                    <button disabled="@isLoading" class="w-full py-4 bg-[#d4b38d] text-white font-bold rounded-sm hover:bg-[#b08d65] disabled:opacity-50 disabled:cursor-not-allowed shadow-lg shadow-[#d4b38d]/20 flex items-center justify-center space-x-2 transition-all" type="submit">
                        @if (isLoading)
                        {
                            <div class="w-5 h-5 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
                            <span>KAYDEDILIYOR</span>
                        }
                        else
                        {
                            <span>STÜDYOYA KATIL</span>
                            <span class="material-symbols-outlined text-sm">arrow_forward</span>
                        }
                    </button>
                </div>
            </form>
            
            <!-- Social Signup & Footer -->
            <footer class="space-y-8 pt-4">
                <div class="relative flex items-center">
                    <div class="flex-grow border-t border-gray-200 dark:border-white/10"></div>
                    <span class="flex-shrink mx-4 text-xs text-gray-400 uppercase tracking-widest">veya kayıt ol</span>
                    <div class="flex-grow border-t border-gray-200 dark:border-white/10"></div>
                </div>
                <div class="grid grid-cols-1 gap-4">
                    <button class="flex items-center justify-center space-x-3 py-3 px-4 border border-gray-200 dark:border-white/10 rounded-sm bg-white dark:bg-white/5 hover:bg-gray-50 dark:hover:bg-white/10 transition-colors group">
                        <svg class="w-5 h-5 text-gray-400 group-hover:text-[#d4b38d] transition-colors" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12.48 10.92v3.28h7.84c-.24 1.84-.908 3.152-1.928 4.176-1.224 1.224-3.136 2.592-6.44 2.592-5.336 0-9.496-4.32-9.496-9.656s4.16-9.656 9.496-9.656c2.824 0 4.936 1.112 6.472 2.56l2.304-2.304C18.592 1.632 15.832 0 12.12 0 5.464 0 0 5.464 0 12.12s5.464 12.12 12.12 12.12c3.624 0 6.36-1.192 8.448-3.376 2.136-2.136 2.808-5.144 2.808-7.536 0-.72-.064-1.408-.184-2.04h-10.728z"></path>
                        </svg>
                        <span class="text-sm font-semibold tracking-wide">GOOGLE İLE KAYIT OL</span>
                    </button>
                </div>
                <p class="text-center text-sm text-gray-500 dark:text-gray-400">
                    Zaten hesabınız var mı?
                    <a class="text-[#d4b38d] font-bold hover:underline ml-1 no-underline" href="/login">Giriş Yap</a>
                </p>
            </footer>
        </div>
        <!-- Legal Terms -->
        <div class="mt-12 lg:mt-24 text-center lg:absolute lg:bottom-12">
            <p class="text-[10px] uppercase tracking-widest text-gray-400 font-medium">
                © 2024 Giydir.AI Sanal Deneme. Tüm hakları saklıdır.
            </p>
        </div>
    </section>
</main>

@code {
    private string name = string.Empty;
    private string email = string.Empty;
    private string password = string.Empty;
    private bool termsAccepted = false;
    private bool isLoading = false;
    private string? errorMessage;

    private async Task HandleRegister()
    {
        if (string.IsNullOrWhiteSpace(email) || string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "E-posta ve şifre gereklidir.";
            return;
        }

        if (password.Length < 6)
        {
            errorMessage = "Şifre en az 6 karakter olmalıdır.";
            return;
        }

        if (!termsAccepted)
        {
            errorMessage = "Kullanım şartlarını kabul etmelisiniz.";
            return;
        }

        isLoading = true;
        errorMessage = null;

        try
        {
            var registerDto = new RegisterDto { Email = email, Password = password, Name = name };
            var response = await Http.PostAsJsonAsync("api/auth/register", registerDto);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<AuthResponseDto>();
                if (result?.Success == true && !string.IsNullOrEmpty(result.Token))
                {
                    await JSRuntime.InvokeVoidAsync("tokenStorage.setToken", result.Token);
                    Navigation.NavigateTo("/", forceLoad: true);
                }
                else
                {
                    errorMessage = result?.Error ?? "Kayıt başarısız oldu.";
                }
            }
            else
            {
                try
                {
                    var error = await response.Content.ReadFromJsonAsync<AuthResponseDto>();
                    errorMessage = error?.Error ?? "Kayıt başarısız oldu. Lütfen tekrar deneyin.";
                }
                catch
                {
                    errorMessage = $"Kayıt başarısız oldu. Status: {response.StatusCode}";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Bir hata oluştu: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}
