<div class="comparison-wrapper">
    <img-comparison-slider class="slider-custom">
        <img slot="first" src="@BeforeImage" alt="Düz Kıyafet" />
        <img slot="second" src="@AfterImage" alt="Model Sonucu" />
        
        <div slot="first" class="slider-label label-before">
            <span class="material-symbols-outlined">checkroom</span>
            <span>Düz Kıyafet</span>
        </div>
        
        <div slot="second" class="slider-label label-after">
            <span class="material-symbols-outlined">person</span>
            <span>Model Sonucu</span>
        </div>
    </img-comparison-slider>
</div>

<style>
    .comparison-wrapper {
        width: 100%;
        height: 100%;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .slider-custom {
        width: 100%;
        height: 100%;
        --divider-width: 2px;
        --divider-color: #d4b38d;
        --default-handle-opacity: 1;
        --default-handle-width: 48px;
        border-radius: 1rem;
        overflow: hidden;
    }

    .slider-custom img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .slider-label {
        position: absolute !important;
        bottom: 1.5rem !important;
        background: rgba(0, 0, 0, 0.75) !important;
        backdrop-filter: blur(12px) !important;
        -webkit-backdrop-filter: blur(12px) !important;
        padding: 0.5rem 0.75rem !important;
        border-radius: 9999px !important;
        border: 1px solid rgba(255, 255, 255, 0.2) !important;
        display: flex !important;
        align-items: center !important;
        gap: 0.5rem !important;
        font-size: 10px !important;
        font-weight: bold !important;
        text-transform: uppercase !important;
        letter-spacing: 0.05em !important;
        color: white !important;
        pointer-events: none !important;
        z-index: 100 !important;
        white-space: nowrap !important;
    }

    .label-before {
        left: 1.5rem !important;
    }

    .label-before .material-symbols-outlined {
        color: #94a3b8 !important;
        font-size: 14px !important;
    }

    .label-after {
        right: 1.5rem !important;
    }

    .label-after .material-symbols-outlined {
        color: #d4b38d !important;
        font-size: 14px !important;
    }

    /* Custom handle styling */
    .slider-custom::part(handle) {
        background: #d4b38d;
        border: 4px solid #0f172a;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
        width: 48px;
        height: 48px;
    }

    .slider-custom::part(handle)::before,
    .slider-custom::part(handle)::after {
        content: '';
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 0;
        height: 0;
        border-style: solid;
    }

    .slider-custom::part(handle)::before {
        left: 8px;
        border-width: 6px 8px 6px 0;
        border-color: transparent #0f172a transparent transparent;
    }

    .slider-custom::part(handle)::after {
        right: 8px;
        border-width: 6px 0 6px 8px;
        border-color: transparent transparent transparent #0f172a;
    }
</style>

@code {
    [Parameter] public string BeforeImage { get; set; } = "";
    [Parameter] public string AfterImage { get; set; } = "";
}
